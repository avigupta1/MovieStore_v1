<% include partials/header %>

<div class="container">
	<div class="formdiv">
		<header>
			<h3 class="text-center">Search Movies or Series!</h3>
		</header>
	</div>
	<div class="formdiv">
		<form action="/search/results" method="GET" class="myform">
			<div class="form-group">
				<label for="String">Name of Movie or Series or Episode:</label>
				<input type="text" class="form-control" name="searchobj[String]" id="String" placeholder="Avengers: Endgame, Game of Thrones..." required>
			</div>
			
			<div class="form-group">
				<label for="year">Year of Release:</label>
				<input type="number" class="form-control" name="searchobj[Year]" id="year" placeholder="1999">
			</div>
			
			<div class="form-group">
				<div class="custom-control custom-radio custom-control-inline">
				  <input type="radio" id="customRadioInline1" value="movie" name="searchobj[Type]" class="custom-control-input">
				  <label class="custom-control-label" for="customRadioInline1">movie</label>
				</div>
				<div class="custom-control custom-radio custom-control-inline">
				  <input type="radio" id="customRadioInline2" value="series" name="searchobj[Type]" class="custom-control-input">
				  <label class="custom-control-label" for="customRadioInline2">series</label>
				</div>
			</div>
			

			<!-- <div class="form-group">
				<label for="Type">Type:</label>
				<select class="form-control" id="Type" name="searchobj[Type]">
					<option>movie</option>
					<option>series</option>
				</select>
			</div> -->
			
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</div>

		</form>
	</div>
	
</div>



<% include partials/footer %>
